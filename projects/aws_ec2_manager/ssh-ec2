#!/bin/bash

# Path to the SSH config file generated by aws_ec2_manager.py
SSH_CONFIG_FILE="aws-ec2-manager-ssh.config"

# Check if the SSH config file exists
if [ ! -f "$SSH_CONFIG_FILE" ]; then
    echo "Error: SSH config file '$SSH_CONFIG_FILE' not found."
    echo "Please run the 'config' command using aws_ec2_manager.py to generate SSH configurations."
    exit 1
fi

# Execute SSH with the specified config and provided arguments
ssh -F "$SSH_CONFIG_FILE" "$@"
